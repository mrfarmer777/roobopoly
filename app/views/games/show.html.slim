= turbo_stream_from game
.body-container id="#{dom_id(game)}"
  .controls-container
    h1 Game #{game.id}
    = link_to 'Back to Games', games_path
    = link_to 'Create a New Game', new_game_path
    p
      - if game.users.any?
        | Players:
        = game.users.map(&:name).join(', ')
    .notice-container
      = notice
    .controls
      = "It's your turn, #{current_user_game.user.name}!" if current_user_game
      - if current_user_game
        = button_to 'Roll and Move', move_game_user_game_path(game_id: game.id, id: current_user_game.id), method: :post
  .game-board
    - game.spaces.each_with_index do |space, index|
      - user_names = game.user_games.select{ |pg| pg.position == space.position }.map{ |pg| pg.user.name }
      - space_component = SpaceComponentFactory.create(space)
      - space_component.user_names = user_names
      = render space_component